{
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.roundedSelection": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.renderWhitespace": "all",
  "editor.autoClosingBrackets": "languageDefined",
  "editor.autoClosingComments": "languageDefined",
  "editor.autoClosingQuotes": "languageDefined",
  "editor.multiCursorLimit": 24,
  "editor.renderLineHighlight": "gutter",
  "editor.scrollbar.horizontalScrollbarSize": 4,
  "editor.scrollbar.scrollByPage": true,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.tabSize": 4,
  "editor.fontFamily": "'HackGen35 Console NF', monospace",
  "editor.fontSize": 12,
  "editor.letterSpacing": -0.2,
  "editor.lineHeight": 1.4,
  "editor.cursorWidth": 3,
  "editor.cursorBlinking": "phase",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,

  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.zoomLevel": -2,
  "window.commandCenter": false,

  "breadcrumbs.enabled": true,

  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.reduceMotion": "off",
  "workbench.list.horizontalScrolling": true,
  "workbench.layoutControl.enabled": false,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ffd900",
    "terminalCursor.foreground": "#ffd900"
  },

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.25,
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,

  "search.smartCase": true,

  // html, css
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": true
    }
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": true
    }
  },
  "emmet.variables": {
    "lang": "ja"
  },
  "scss.validate": false,
  "css.validate": false,

  // markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },

  // toml
  "[toml]": {
    "editor.defaultFormatter": "be5invis.toml"
  },

  // yaml
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JavaScript, TypeScript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Python
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "python.analysis.typeCheckingMode": "strict",
  "mypy-type-checker.showNotifications": "always",
  "mypy-type-checker.args": [
    "--warn-return-any",
    "--no-implicit-optional",
    "--disallow-untyped-calls",
    "--disallow-untyped-defs",
    "--ignore-missing-imports",
    "--follow-imports=skip"
  ],
  "ruff.format.args": ["line-length =79", "indent-width=4"],
  "ruff.lint.args": ["line-length =79", "indent-width=4"],

  // Django
  "[django-html]": {
    "editor.defaultFormatter": "monosans.djlint",
    "djlint.enableLinting": true,
    "djlint.profile": "django"
  },
  "emmet.includeLanguages": {
    "django-html": "html"
  },

  // jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.magicCommandsAsComments": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.formatOnCellExecution": true,

  // Rust
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.cargo.buildScripts.overrideCommand": null,

  // lua
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },

  // other extensions
  "github.copilot.enable": {
    "*": true,
    "plaintext": "true",
    "markdown": "true",
    "rust": false
  },
  "trailing-spaces.trimOnSave": true,
  "liveServer.settings.useLocalIp": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "cSpell.userWords": [
    "be5invis",
    "charliermarsh",
    "djlint",
    "donot",
    "esbenp",
    "isort",
    "JohnnyMorganz",
    "mypy",
    "rgba",
    "slidev",
    "stylelint",
    "stylua"
  ],
  "cSpell.language": "en, ja",
  "auto-close-tag.disableOnLanguage": ["ts"],
  "stylelint.config": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
      "selector-id-pattern": "^[a-z][a-zA-Z0-9]+$"
    }
  },
  "vscode-pets.petSize": "large",
  "vscode-pets.throwBallWithMouse": true,
  "slidev.enabled": true,
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "vue",
    "HTML (EEx)",
    "HTML (Eex)",
    "django-html"
  ]
}
